@using Com.BitsQuan.Option.Match
@using Com.BitsQuan.Option.Core
@model IEnumerable<Com.BitsQuan.Option.Core.Deal>
 <style>
     .deal-panel {
          
     }

     .deal {
         line-height: 2.1em;
         font-size: 1.14em;
         margin: 1px 0px;
         border-bottom: 1px solid lightgray;
     }

         .deal div {
             display: inline-block;
                       font-family: '微软雅黑';
     font-size:13px;
         }

             .deal div:nth-child(2n+1) {
                 width: 18%;
             }

             .deal div:nth-child(2n+2) {
                 width: 28%;
                 text-align: left;
             }

             .deal div:nth-child(2n+3) {
                 width: 13%;
                 text-align:left;
             }

             .deal div:nth-child(2n+4) {
                 width: 13%;
                 text-align: right;
             }

             .deal div:nth-child(2n+5) {
                 width: 18%;
                 text-align: right;
             }

 </style>
<div class="elment1" style="color:black;padding:0px;background-color:#f2f2f2;margin:0px;height:30px; border: 1px solid lightgray;border-bottom:none">
    <div style="width:50%;padding-left:10px;float:left;height:30px;line-height:30px">实时行情</div>
    <div style="width:50%;text-align:right;padding-right:10px;float:right;height:30px;line-height:30px"><a href="javascript:void(0)" onclick="moredetail();">更多</a></div>
    
</div>
<div style="clear:both"></div>
 <div class="deal-panel" style="height:430px;border-top:none;">
     <div class="deal" style="font-weight:bold;" >
         <div >时间</div>
         <div >成交价</div>
         <div >量</div>
         <div >仓</div>
         <div>性质</div>
     </div>
    @if (Model != null)
    {
        foreach (var v in Model)
        {
            <div class="deal">
                <div>
                    @v.When.ToString("HH:mm")
                </div>
                <div>@v.Price.ToString("C2")</div>
                <div>@(v.Count)</div>
                <div>@(v.DealType == DealType.空换 ? 0 : v.DealType == DealType.双开 ? v.Count : v.Count * (-1))</div>
                <div>@v.DealType</div>
            </div>
        }
    }
</div>     
