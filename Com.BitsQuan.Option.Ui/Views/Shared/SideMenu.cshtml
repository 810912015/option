@Scripts.Render("~/scripts/simplepopup.js","~/scripts/draggable.js")
<script>
    $(function () {
        $(".side-menu>ul>li").on("mouseover mouseout", function () {
            $(this).children("div").toggle();
        });
        $(".contact-box").hover(function () {
            $(".contact icon-w").hide();
            $(".contact caption").show();
        }, function () {
            $(".contact icon-w").show();
            $(".contact caption").hide();
        });

        var popup = new Popup(document.getElementById("CalcTop"));
        $("#btn-calc").click(function () {
            popup.show();
        });
        $("#btn-close").click(function () { popup.close(); });
        $("#btn-gotop").click(function () { });
        $(".return").click(function () {
            $('body,html').animate({ scrollTop: 0 }, 1000);
        });
        new Draggable($("#calcheader")[0], $("#CalcTop")[0]);
    });
</script>