@model Com.BitsQuan.Option.Ui.Areas.Supervise.Controllers.FeeModel

@{
    var ajo = new AjaxOptions
   {
       UpdateTargetId = "maincontent",
       InsertionMode = InsertionMode.Replace
   };
}

<h4>
    费用参数设置
</h4>

@if (ViewBag.msg != null)
{ <div style="color:red;">
        @ViewBag.msg
    </div>
    <div class="lead">
        费用参数为:@Html.DisplayNameFor(m => m.CommissionRatio)<strong>@Model.CommissionRatio</strong> 
    </div>
}
else
{
    using (Ajax.BeginForm("fee", null, ajo, new { role = "form", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.CommissionRatio, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.CommissionRatio, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CommissionRatio)
                </div>
            </div>

            
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="保存" class="btn btn-danger" />
                </div>
            </div>
        </div>
    }
}