@using Com.BitsQuan.Option.Ui.Models
@model BankOpModel




<div style="margin:10px;padding:10px;">
    <div id="withdrawcny">
        @using (Ajax.BeginForm("withdrawcny", "cache", null, new AjaxOptions
        {
            UpdateTargetId = "withdrawcny",
            InsertionMode = InsertionMode.Replace
        },
        new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken();
            <div class="cashbox">
                <div style="height:300px" class="withd">
                    <div class="text-center"><a href="~/WebHelper/PayAndWithdraw?type=2">查看教程</a></div>
                    <ul>
                        <li class="text">
                            <i>1.提现手续费率为<span>0.2%</span>，最小提现金额为<span>200</span>人民币,单笔最大提现金额为<span>50000</span>人民币,24小时内到账<br /></i>
                            <i>2.若在指定时间内仍未收到款项,请与客服联系,我们核实后会为您补发款项</i>
                        </li>
                        <li class="address">

                            &nbsp;&nbsp;&nbsp; @Html.LabelFor(m => m.BankAccountId, new { }) &nbsp;
                            @Html.DropDownListFor(a => a.BankAccountId,
                            (List<SelectListItem>)ViewData["accounts"],
                             new { })
                            @Html.ValidationMessageFor(a => a.BankAccountId)
                            @Html.ActionLink("[管理银行卡]", "Index", new { id = 2 }, new { @class = "address1" })
                        </li>

                        <li class="address2" style="margin-bottom:15px">
                            <br /><strong>
                                可用现金
                            </strong>
                            &nbsp;<i>
                                @if (ViewData["CnyUsable"] != null)
                                {
                                    <span style="color:red">@ViewData["CnyUsable"]</span>
                                }
                            </i>
                        </li>

                        <li class="address2">
                            @Html.LabelFor(m => m.Delta, new { })
                            @Html.TextBoxFor(a => a.Delta, new { name = "提现数量", onmouseout = "this.style.border='1px solid #c2c2c2'", onmouseover = "this.style.border='1px solid #559be9'", style = "border:1px solid #c2c2c2;" })
                            @Html.ValidationMessageFor(a => a.Delta)
                        </li>
                        <li class="address2">
                            @Html.LabelFor(m => m.Tradepwd, new { })
                            @Html.PasswordFor(a => a.Tradepwd, new { name = "交易密码", onmouseout = "this.style.border='1px solid #c2c2c2'", onmouseover = "this.style.border='1px solid #559be9'", style = "border:1px solid #c2c2c2" })
                            @Html.ValidationMessageFor(a => a.Tradepwd)
                        </li>
                        <li class="address3">
                            @Html.LabelFor(m => m.PhoneCode, new { })
                            @Html.TextBoxFor(a => a.PhoneCode, new { name = "手机验证码", onmouseout = "this.style.border='1px solid #c2c2c2'", onmouseover = "this.style.border='1px solid #559be9'", style = "border:1px solid #c2c2c2" })


                            <input style='background: url(@Url.Content("~/Content/images/btn.png)") no-repeat; border: none; width: 180px; margin-top: 20px; font-family: "微软雅黑"; color: white; font-size: 14px; height: 30px; font-weight: bold; cursor: pointer;'
                                   type="button" onclick="getOldCode()" id="getCode" value="点击获取" />
                            @Html.ValidationMessageFor(a => a.PhoneCode)
                        </li>

                        <li style=" margin-left:168px">
                            <input type="submit" value="确认提交" id="button1">
                            @if (ViewBag.msg != null)
                            {
                                <span style="color:red">  @ViewBag.msg</span>
                            }
                            @if (ViewData["phone"] != null)
                            {
                                <span style="display:none" id="phone">@ViewData["phone"]</span>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        }


        <table class="table table-striped" cellspacing="0">
            <caption>
                <div class="title">
                    提现记录
                </div>

            </caption>
            @*<tr>
                    <th>编号</th>
                    <th>时间</th>
                    <th>金额</th>
                    <th>银行卡</th>
                    <th>进度</th>
                    <th>审核通过金额</th>
                    <th>审核结果</th>
                    <th>审核描述</th>
                </tr>*@

            <tr>

                <th>时间</th>
                <th>提现金额</th>
                <th>手续费</th>
                <th>实收金额</th>
                <th>银行名称</th>
                <th>银行账号</th>
                <th>审核结果</th>
                <th>审核描述</th>
            </tr>
            @if (ViewData["withdraw"] != null)
            {
                foreach (var v in ViewData["withdraw"] as List<BankRecord>)
                {
                    @*<tr>
                            <td>@v.Id</td>
                            <td>@v.When</td>
                            <td>@v.Delta</td>
                            <td>@string.Format("{0}-{1}", v.Account.BankName, v.Account.Number)</td>
                            <td>@(v.IsApproved ? "已审核" : "审核中")</td>
                            <td>@v.ActualDelta</td>
                            <td>@(v.ApprovedResult == null ? "" : (bool)v.ApprovedResult ? "成功" : "失败")</td>
                            <td>@Html.DisplayFor(m => v.ApproveDesc)</td>
                        </tr>*@

                    <tr>
                        <td>@v.When</td>
                        <td>@v.Delta</td>
                        <td>@((v.Delta * 0.004m).ToString("F2"))</td>
                        <td>@v.ActualDelta</td>
                        <td>@v.Account.Name</td>
                        <td>@v.Account.Number</td>
                        <td>@(v.ApprovedResult == null ? "" : (bool)v.ApprovedResult ? "成功" : "失败")</td>
                        <td>@Html.DisplayFor(m => v.ApproveDesc)</td>
                    </tr>
                }
            }

        </table>
    </div>
</div>

<script>
    //获得验证码
    function getOldCode() {
        $("#getCode").removeAttr("onclick").css("cursor", "");
        var phone = $("#phone").html();
        if (phone == "" || phone == null) {
            alert("请进入安全中心绑定手机号");
            return;
        }
        var securityToken = $('input[name=__RequestVerificationToken]').val();
        $.post("/Cache/getOldCode", { __RequestVerificationToken: securityToken, "phone": phone }, function (d) {
            time($("#getCode"));
        });
    }
    var wait = 30;
    function time(o) {
        if (wait == 0) {
            o.attr("onclick", "getOldCode()").css("cursor", "pointer");
            o.val("点击获取");
            wait = 30;
        } else {
            o.val("重新发送(" + wait + ")");
            wait--;
            setTimeout(function () {
                time(o)
            },
        1000)
        }
    }

</script>