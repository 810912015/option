                var tth = $(j);
                var ttar = tth.data("tar");
                if (ttar != tar) {
                    tth.removeClass("btn-primary");
                    tth.addClass("btn-default")
                    $(ttar).addClass("hidden");
                }
                else {
                    tth.addClass("btn-primary");
                    tth.removeClass("btn-default")
                    $(ttar).removeClass("hidden");
                }
            });
        })
    })
