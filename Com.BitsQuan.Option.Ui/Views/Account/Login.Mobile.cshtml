@{
    Layout = null;
}
@model Com.BitsQuan.Option.Ui.Models.LoginViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title></title>
    @Styles.Render("~/scripts/bs-3.3.4/css/bootstrap.min.css")
    <style>
        body {
            background-color: #f5f5f5;
        }

        input[type="submit"] {
            margin-top: 20px;
        }

        .title {
            font-size: 28px;
            text-align: center;
            font-family: 'Microsoft YaHei';
        }

        .btn-register {
            position: absolute;
            right: 14px;
            line-height: 40px;
            font-size: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("Login", "Account", new
        {
            ReturnUrl = ViewBag.ReturnUrl
        }, FormMethod.Post, new
        {
            @class = "form-horizontal",
            id = "thislogin",
            role = "form"
        }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group text-center">
                <span class="title">登录比权网</span>
                <span class="btn-register">
                    @Html.ActionLink("注册", "Register", null, new { @class = "" })
                </span>
            </div>
            <div class="form-group form-group-lg">
                <div class="col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @AttributeValue = "请输入用户名", placeholder = "请输入用户名" })
                    </div>
                </div>
            </div>
            <span class="alert-danger">@Html.ValidationMessageFor(m => m.UserName)</span>
            <div class="form-group form-group-lg">
                <div class="col-xs-12">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "请输入密码" })
                    </div>
                </div>
            </div>
            <span class="alert-danger">@Html.ValidationMessageFor(m => m.Password)</span>
            if (ViewBag.Error != null)
            {
                <p class="alert-danger">@ViewBag.Error</p>
            }
            <div class="form-group">
                <div class="col-xs-12">
                    <input type="submit" class="btn btn-primary btn-lg btn-block" value="登录">
                </div>
            </div>
            <span class="pull-right">
                <h4>
                    @Html.ActionLink("忘记密码", "FindPassword", null, new { @class = "" })
                </h4>
            </span>
        }
    </div>
</body>
</html>
