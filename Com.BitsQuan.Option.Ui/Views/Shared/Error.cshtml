@model System.Web.Mvc.HandleErrorInfo

@{
    
}
@if (Request.IsLocal) { 
 <div class="container" style="width:900px;margin:auto;">
    <h3 class="text-danger">出错了,请通知管理员 @(Model.ControllerName != null ? Model.ControllerName : "")-@(Model.ActionName != null ? Model.ActionName : "")</h3>
    @if (Model.Exception != null)
{
    <div >
        <div>@(Model.Exception.Message != null ? Model.Exception.Message : "")</div>

        <div>@(Model.Exception.StackTrace != null ? Model.Exception.Source : "")</div>
        <div>
            @if (Model.Exception.InnerException != null)
            {
                <div>
                    @Model.Exception.InnerException.Message
                </div>
                <div>
                    @Model.Exception.StackTrace
                </div>
            }
        </div>
    </div>
}
</div>
}
else
{
    <div style ="width:900px;margin:auto;">
        <img src="/content/images/err/error-img.png" title="error" />
    </div>
}
